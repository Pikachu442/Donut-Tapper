import turtle
import math
from time import sleep
screen = turtle.Screen()
dummy = turtle.Turtle('turtle')
a = 1
#cookies per click
screen.addshape('giphy donut.gif')
dummy.shape('giphy donut.gif')
screen.setup()
dummy.speed(1000)
dummy.penup()
print(dummy.xcor())
dummy.penup()
dummy.pendown()
writer = turtle.Turtle()
writer.hideturtle()
writer.penup()
writer.goto(200, 200)
donuts = 1
dummy.pencolor('black')
clickers = 0

writer2 = turtle.Turtle('turtle')
screen.addshape('blackbox.gif')
writer2.shape('blackbox.gif')
writer2.penup()
writer2.hideturtle()
writer2.goto(-600,300)
writer2.showturtle()
while True:
    turtle.tracer(0)
    writer.clear()
    writer.write('Donuts: '+ str(donuts), font = ('arial',30,'normal'))
    def add_clicker(x,y):
        global clickers
        clickers +=1
    writer2.onclick(add_clicker)
    def click(x,y):
        global donuts
        global a
        global donuts_trunc
        donuts += a
        writer.clear()
        writer.write('Donuts: '+ str(donuts), font = ('arial',30,'normal'))
    dummy.onclick(click)
    donuts += 0.01*clickers
    
    sleep(0.1)
    writer.clear()
    writer.write('Donuts: '+ str(donuts), font = ('arial',30,'normal'))



turtle.mainloop()
turtle.listen()







