import turtle
import math
from time import sleep
sleep(1)
print('Hello, before the game starts you should kno')
screen = turtle.Screen()
screen.title('Donut Tapper')
root = turtle.Screen()._root
root.iconbitmap("Cat with a wierd face.jpg")
dummy = turtle.Turtle('turtle')
a = 1
#cookies per click
screen.addshape('giphy donut.gif')
dummy.shape('giphy donut.gif')
screen.setup()
dummy.speed(1000)
dummy.penup()
print(dummy.xcor())
dummy.penup()
dummy.pendown()
writer = turtle.Turtle()
writer.hideturtle()
writer.penup()
writer.goto(200, 200)
donuts = 1000000
dummy.pencolor('black')
clickers = 0
gamer_mice = 0
autoclickers = 0
shops = 0

writer2 = turtle.Turtle('turtle')
writer3 = turtle.Turtle('turtle')
writer4 = turtle.Turtle('turtle')
writer5 = turtle.Turtle('turtle')
turtle.tracer(0)
screen.addshape('images.gif')
writer2.shape('images.gif')
writer3.shape('images.gif')
writer4.shape('images.gif')
writer5.shape('images.gif')
writer2.penup()
writer3.penup()
writer4.penup()
writer5.penup()
writer2.hideturtle()
writer2.goto(-600,300)
writer3.goto(-600,150)
writer4.goto(-600,0)
writer5.goto(-600,-150)
writer2.showturtle()
turtle.tracer(1)
while True:
    turtle.tracer(0)
    writer.clear()
    writer.write('Donuts: '+ str(donuts), font = ('arial',30,'normal'))
    def add_clicker(x,y):
        global clickers
        global donuts
        #you need to do the global thing for all variables in def statements for some reason
        if donuts >= 20:
            clickers += 1
            donuts -= 20
    def add_gamer_mouse(x,y):
        global gamer_mice
        global donuts
        if donuts >= 100:
            gamer_mice +=1
            donuts -= 100
    def add_autoclicker(x,y):
        global autoclickers
        global donuts
        if donuts >= 1000:
            autoclickers += 1
            donuts -= 1000
    def add_shop(x,y):
        global shops
        global donuts
        if donuts >= 5000:
            shops += 1
            donuts -= 5000
    
        
            
        
            
            
            
            
    writer2.onclick(add_clicker)
    writer3.onclick(add_gamer_mouse)
    writer4.onclick(add_autoclicker)
    writer5.onclick(add_shop)
    
    def click(x,y):
        global donuts
        global a
        global donuts_trunc
        donuts += a
        writer.clear()
        writer.write('Donuts: '+ str(donuts), font = ('arial',30,'normal'))
    dummy.onclick(click)
    donuts += 0.01*clickers
    donuts += 0.1*gamer_mice
    donuts += 1*autoclickers
    donuts += 5+shops
    #every number you are adding for the upgrades needs to be divided by 10 since it refreshes every 0.1 second and not 1
    sleep(0.1)
    writer.clear()
    writer.write('Donuts: '+ str(donuts), font = ('arial',30,'normal'))



turtle.mainloop()
turtle.listen()








