import turtle
import math
from time import sleep
screen = turtle.Screen()
dummy = turtle.Turtle('turtle')
a = 1
#cookies per click
screen.addshape('giphy donut.gif')
dummy.shape('giphy donut.gif')
screen.setup()
dummy.speed(1000)
dummy.penup()
print(dummy.xcor())
dummy.penup()
dummy.pendown()
writer = turtle.Turtle()
writer.hideturtle()
writer.penup()
writer.goto(200, 200)
donuts = 10000000
dummy.pencolor('black')
has_clicker = True
clickers = 1
while True:
    turtle.tracer(0)
    writer.clear()
    writer.write('Donuts: '+ str(donuts), font = ('arial',30,'normal'))
    def click(x,y):
        global donuts
        global a
        global donuts_trunc
        donuts += a
        writer.clear()
        writer.write('Donuts: '+ str(donuts), font = ('arial',30,'normal'))
    dummy.onclick(click)
    if has_clicker == True:
        donuts += 0.1*clickers
    
    sleep(0.1)
    writer.clear()
    writer.write('Donuts: '+ str(donuts), font = ('arial',30,'normal'))



turtle.mainloop()
turtle.listen()




